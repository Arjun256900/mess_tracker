        background-size: cover;
        font-size: 20px;
      }
      :root {
        --mainColor: gold;
        --mainColor-dark: rgb(206, 191, 32);
      }
      header {
        background-repeat: no-repeat;
        background-size: cover;
        height: 107.2vh;
      }
      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1em 0;
        margin-bottom: none;
      }
      .navbar_logo {
        font-size: 1.5rem;
        color: var(--mainColor);
        text-decoration: none;
        margin-left: none;
        text-transform: uppercase;
      }
      .navbar_list {
        display: flex;
        list-style-type: none;
        font-size: 1.1rem;
        margin-right: 25rem;
      }
      .navbar_list li {
        margin-right: 1em;
        color: hsl(0, 0%, 100%);
      }
      .navbar_icons {
        color: var(--mainColor);
        margin-right: 0.5em;
        font-size: 1.2rem;
      }

      .navbar > img {
        margin-left: 20px;
        border-radius: 20px;
        max-width: 70px;
      }
      .header_desc {
        color: hsl(0, 0%, 100%);
      }

      .section_title {
        color: rgb(206, 191, 32);
        text-align: center;
        margin: none;
        font-size: 15.5px;
      }
      .section_title h2 {
        position: relative;
        display: inline-block;
      }
      .section_title h2 :before {
        content: " ";
        position: absolute;
        width: 80px;
        height: 3px;
        background-color: var(--mainColor);
        bottom: 0;
        left: 50%;
        transform: translateX(-55%);
      }
      .our_menu {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        margin: none;
        text-align: center;
        color: white;
      }
      .menu_column {
        width: 31%;
      }
      h2 {
        padding: 0px;
      }
      .single_menu {
        font-size: 20px;
        display: flex;
        align-items: center;
        padding: 1rem;
        margin: none;
      }
      .single_menu img {
        width: 100px;
        height: 100px;
        border: 1px dashed rgba(0, 0, 0, 0);
        border-radius: 100%;
        margin-right: 15px;
      }
      button:hover {
        background-color: var(--mainColor-dark);
      }
      button:active {
        transform: scale(0.98);
      }

      .single_menu button:hover {
        background-color: var(--mainColor-dark);
        transform: scale(0.9);
        cursor: pointer;
      }

      .single_menu button {
        transition-property: width, height, transform, background, font-size;
        transition-duration: 1s, 1s, 1s, 1s, 1s;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        overflow: hidden;
        background-image: linear-gradient(
            rgb(255, 255, 255),
            rgba(255, 255, 255, 0.6)
          ),
          url();

        background-size: cover;
        margin-right: 10px;
      }
      .selected {
        background-image: linear-gradient(
            rgba(255, 255, 255, 0.4),
            rgba(255, 255, 255, 0.6)
          ),
          url();
        transition: background-color 0.4s ease-in, border-color 0.4s ease-in;
      }

      .vote_now {
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .vote_now button {
        align-self: center;
        background-color: var(--mainColor);
        font-size: 20px;
        border-radius: 10px;
        padding: 10px;
        border: none;
        width: 50%;
      }
      .vote_now button:hover {
        background-color: var(--mainColor-dark);
      }
      .vote_now button:active {
        transform: scale(0.98);
      }
    </style>
  </head>
